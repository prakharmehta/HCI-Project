     ['Español',         ['es-ES']],
     ['Euskara',         ['eu-ES']],
     ['Français',        ['fr-FR']],
     ['Galego',          ['gl-ES']],
     ['Hrvatski',        ['hr_HR']],
     ['IsiZulu',         ['zu-ZA']],
     ['Íslenska',        ['is-IS']],
     ['Italiano',        ['it-IT']],
     ['Magyar',          ['hu-HU']],
     ['Nederlands',      ['nl-NL']],
     ['Norsk bokmål',    ['nb-NO']],
     ['Polski',          ['pl-PL']],
     ['Português',       ['pt-PT']],
     ['Română',          ['ro-RO']],
     ['Slovenčina',      ['sk-SK']],
     ['Suomi',           ['fi-FI']],
     ['Svenska',         ['sv-SE']],
     ['Türkçe',          ['tr-TR']],
     ['български',       ['bg-BG']],
     ['Pусский',         ['ru-RU']],
     ['Српски',          ['sr-RS']],
     ['한국어',            ['ko-KR']],
     ['中文',             ['cmn-Hans-CN']],
     ['日本語',           ['ja-JP']],
     ['Lingua latīna',   ['la']]];
     %>
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="#" class="brand-logo">Logo</a>
            <ul class="right hide-on-med-and-down">
                <li><a href="#features">Features</a></li>
                <li><a href="#monument-search-section">Monuments</a></li>
                <li><a href="#ar-model-section">AR Models</a></li>
            </ul>

            <ul id="nav-mobile" class="sidenav">
                <li><a href="#features">Features</a></li>
                <li><a href="#monument-search-section">Monuments</a></li>
                <li><a href="#ar-model-section">AR Models</a></li>
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>

    <div id="index-banner" class="parallax-container">
        <div class="section no-pad-bot">
            <div class="container">
                <br><br>
                <h1 class="header center teal-text text-lighten-2">Monument Search</h1>
                <div class="row center">
                    <h5 class="header col s12 light">Around the World just with the help of a click
                    </h5>
                </div>
                <div class="row center">
                    <a href="#monument-search-section" id="download-button"
                        class="btn-large waves-effect waves-light teal lighten-1">Get Started</a>
                </div>
                <br><br>

            </div>
        </div>
        <div class="parallax"><img src="img/colosseum.jpg" alt="Unsplashed background img 1"></div>
    </div>


    <div class="container" id="features">
        <div class="section">

            <!--   Icon Section   -->
            <div class="row">
                <div class="col s12 m6">
                    <div class="icon-block">
                        <h2 class="center brown-text"><i class="material-icons">short_text</i></h2>
                        <h5 class="center">Text Summarization</h5>

                        <p class="light">
